{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "error",
    "prefer-const": "error"
  },
  "overrides": [
    {
      "files": [
        "*.config.js",
        "*.config.ts",
        "next.config.js",
        "tailwind.config.js"
      ],
      "rules": {
        "@typescript-eslint/no-require-imports": "off"
      }
    }
  ]
}
