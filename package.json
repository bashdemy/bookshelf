{
  "name": "bookshelf",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:cloudflare": "next build && opennextjs-cloudflare build",
    "preview": "npm run build:cloudflare && wrangler dev",
    "deploy": "npm run build:cloudflare && wrangler deploy",
    "start": "next start",
    "lint": "eslint",
    "migrate": "dotenv -e .env.local -- tsx scripts/migrate.ts",
    "migrate:schema": "dotenv -e .env.local -- tsx scripts/migrate.ts --schema-only"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@opennextjs/cloudflare": "^1.11.0",
    "next": "15.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "wrangler": "^4.45.3"
  }
}
